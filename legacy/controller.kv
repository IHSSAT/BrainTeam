#:kivy 1.0

<Controller>:
    FloatLayout:
        canvas.before:
            Color:
                rgb:
                    0,0,1
            Rectangle:
                pos:
                    self.pos
                size:
                    self.size
        Label:
            canvas.before:
                Color:
                    rgb: 1,0,0
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint: 0.83, 0.82
            pos_hint: {'center_x': 0.426, 'center_y': 0.57 }
            text: "hello"
            color: 0,0,1,1
        Label:
            canvas.before:
                Color:
                    rgb: 0,1,0
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 0.83, 0.125
            pos_hint: {'center_x': 0.426, 'center_y': 0.0875}
            text: "hello"
